{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "C:/msys64/ucrt64/bin/mingw32-make.exe"
            }
        },
        {
            "name": "dev",
            "displayName": "Development (Debug)",
            "description": "Debug build with strict warnings",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "MATHLIB_BUILD_TESTS": "OFF",
                "MATHLIB_BUILD_EXAMPLES": "OFF",
                "MATHLIB_BUILD_SANDBOX": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MATHLIB_BUILD_TESTS": "OFF",
                "MATHLIB_BUILD_EXAMPLES": "OFF",
                "MATHLIB_BUILD_SANDBOX": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "configurePreset": "dev"
        },
        {
            "name": "release",
            "configurePreset": "release"
        }
    ]
}
